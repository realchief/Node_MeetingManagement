

{{#if sessionFlash.message}}
    {{#contains sessionFlash.type "info"}}
    <div class="flash-message">
        <p>{{{sessionFlash.message}}}</p>
    </div>
    {{/contains}}
{{/if}}

<div class="inline-form">
<div class="row clearfix">

    <form method="POST" action="/team/edit/" class="form">
        <div class="col first" style="text-align:center;">
           
            <h2 class="with-line">Edit Team Member</h2>
           
             <label for="username"><b>Name</b></label>
             <input type="text" value="{{teamMember.username}}" name="username" required>

             <br />
             <br />
             
              <label for="email"><b>Email Address</b></label>
    <input type="email" value="{{teamMember.email}}" name="email" {{#if errorMessage.email}} class="error" {{/if}} required>

    {{#if errorMessage.email}}
        <p class="alert">{{ errorMessage.email }}</p>
    {{/if}}


    <input type="text" value="{{teamMember.id}}" name="id" hidden required>
    <input type="text" value="{{teamMember.email}}" name="current_email" hidden required>

        </div>

        
        <div class="col last actions">
            <button name="save" type="submit">Save</button>
            <br /><br />
             <p><a href="/team/delete/{{teamMember.id}}">Delete {{teamMember.username}}</a></p>
             <p><a href="/team/">Cancel</a></p>
        </div>	



    </form>	
</div>
</div>
