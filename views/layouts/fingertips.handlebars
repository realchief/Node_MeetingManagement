{{> head }}

<body class="home">

	<div class="app-container">

		<div class="section header clearfix">
			{{> header }}
		</div>

		<div class="below-header"><div class="below-header-inside">

			<div class="container">
					<div class="row clearfix" id="connect-sources">

						<h2 class="with-line">Connect API Sources</h2>

						<div class="two-col cols">

						<div class="col first">

							<div class="connector">

								<h2 class="with-line"><i class="fab fa-google"></i> Google Analytics</h2>

									<ul class="connectors-list">
									{{#if google_data }}
										<a class="title" href='/auth/google/unlink'>Disconnected Google Analytics</a>
									{{else}}
										<a class="title" href='/auth/google'>Connect Google Analytics</a>
									{{/if}}
									</ul>

								<div class="google-accounts">
									{{#if google_data }}
										{{google_data}}
									{{/if}}
								</div>
						
							</div>

						</div>

						<div class="col last">

							<div class="connector">

								<h2 class="with-line"><i class="fab fa-facebook"></i> Facebook</h2>

									<ul class="connectors-list">
									{{#if facebook_data }}
										<a class="title" href="/auth/facebook/unlink">Disconnected Facebook</a>
									{{else}}
										<a class="title" href="/auth/facebook">Connect Facebook Account</a>
									{{/if}}
									</ul>

								<div class="facebook-accounts"></div>
						
							</div>

						</div>
						</div>
				
					</div>


				
				</div>

			</div>

			<div class="section gutter footer">
				{{> footer }}
			</div>

		</div>
	</div>

		

</div>
{{#if (hasOwn google_data 'dialog_data')}}
	<div class="select-google-view modal">
		<div class="modal-header">
			Select Google View
		</div>
		<div class="modal-body">
			<ul>
				{{#each google_data.dialog_data as account}}
					{{account}}
					{{#each account.web_properties as |property|}}
						{{#each property.views as |view|}}
							<a href='/?account_id={{account.account_id}}&property_id={{property.property_id}}&view_id={{view.view_id}}'>
								{{view.view_name}}
							</a>
						{{/each}}
					{{/each}}
				{{/each}}
			</ul>
		</div>
		<div class="modal-footer">

		</div>
	</div>
{{/if}}
	
<div class="test"></div>

	
	{{> scripts }}


</body>

</html>
