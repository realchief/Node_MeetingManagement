{{> head }}

<body class="home">

	<div class="app-container">

		<div class="section header clearfix">
			{{> header }}
		</div>
		<div class="below-header"><div class="below-header-inside">
			<div class="container">

                {{#if sessionFlash.message}}
                    {{#contains sessionFlash.type "info"}}
                    <div class="flash-message">
                        <p>{{{sessionFlash.message}}}</p>
                    </div>
                    {{/contains}}
                {{/if}}


				<div class="row clearfix" style="text-align: center;">

                    <form method="POST" action="/profile/" class="form">
                        
                            <h2 class="with-line">Manage Profile</h2>
                           
                             <label for="username"><b>Your Name</b></label>

                             <input type="text" value="{{user.username}}" name="username" required>

                             <br />
                             
                              <label for="email"><b>Email Address</b></label>
                    <input type="email" value="{{user.email}}" name="email" {{#if errorMessage.email}} class="error" {{/if}} required>

                    {{#if errorMessage.email}}
                        <p class="alert">{{ errorMessage.email }}</p>
                    {{/if}}

                    {{#if errorMessage.company_id}}
                        <p class="alert">{{ errorMessage.company_id }}</p>
                    {{/if}}
                 

                            <br />

                             <label for="company_name"><b>Company Name</b></label>
                             <input type="text" value="{{user.company_name}}" name="company_name" required>

                            <br />

                              <label for="password"><b>Update Password</b></label>
                    <input type="password" placeholder="Enter New Password" name="password" id="password" > 
                     

                    {{#if errorMessage}}
                        {{#if errorMessage.password_match}}
                        <p class="alert">{{ errorMessage.password_match }}</p>
                        {{/if}}
                    {{/if}}                        

                    <br />

                    <label for="psw-repeat"><b>Repeat Password</b></label>
                    <input type="password" placeholder="Repeat New Password" name="confirm_password" id="confirm_password" {{#if errorMessage.email}} class="error" {{/if}} >
                    
                    <br />
                    <button name="save" type="submit">Save</button>
                    
                    </form>	
				</div>
			</div>
			<div class="section gutter footer">
				{{> footer }}
			</div>
		</div>
	</div>	
</div>

<div class="test"></div>
	
	{{> scripts }}


</body>

</html>