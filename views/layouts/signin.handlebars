{{> head }}

    <body class="internal-form">

         {{#if sessionFlash.message}}
                    {{#contains sessionFlash.type "info"}}
                    <div class="flash-message">
                        <p>{{{sessionFlash.message}}}</p>
                    </div>
                    {{/contains}}
                {{/if}}



        <div class="container">

            
            <form action="/signin" method="post">
              
                    

                    <h1 style="text-align:center">Welcome to MeetBrief!</h1>
                 
                        {{#if errorMessage}}
                            <p class="alert">{{ errorMessage }}</p>
                        {{/if}}
                        <input type="email" name="email" placeholder="Email Address" required>
                        <input type="password" name="password" placeholder="Password" required>
                        <input type="submit" value="Login">
               


           
            </form>
        </div>
        <div class="bottom-container" style="margin-top: 20px">
            <div class="row">
                <a href="/signup" style="color:white" class="btn">Sign up</a>
            </div>
        </div>
    

{{> scripts }}

    </body>
</html>