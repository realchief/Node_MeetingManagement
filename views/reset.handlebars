<div class="internal-form">

    <div class="card">
        <form action="/reset/{{user.resetPasswordToken}}" method="post">
            <p>{{user.resetPasswordToken}}</p>
            <h1>Reset Password</h1>
            <input type="password" placeholder="New Password" name="changed_password" required> 
            <input type="password" placeholder="Confirm New Password" name="confirm_changed_password" id="confirm_changed_password"required>
            <input type="submit" value="Update Password">
        </form>
    </div>

</div>