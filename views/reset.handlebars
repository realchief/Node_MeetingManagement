<div class="internal-form">

    <div class="card">
        <form action="/reset/{{user.resetPasswordToken}}" method="post">
            {{#if errorMessage}}
                {{#if errorMessage.password_match}}
                <p class="alert">{{ errorMessage.password_match }}</p>
                {{/if}}
            {{/if}}  
            <h1>Reset Password</h1>
            <input type="password" placeholder="New Password" name="changed_password" {{#if errorMessage.password_match}} class="error" {{/if}} required> 
            <input type="password" placeholder="Confirm New Password" name="confirm_changed_password" id="confirm_changed_password" {{#if errorMessage.password_match}} class="error" {{/if}} required>
            <input type="submit" value="Update Password">
        </form>
    </div>

</div>